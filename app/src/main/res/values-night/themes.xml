<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_500</item>
        <item name="colorPrimaryDark">@color/primary_700</item>
        <item name="colorAccent">@color/teal_200</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="DiceResultAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out_faster</item>
    </style>

    <style name="mySpinnerStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:backgroundTint">@color/primary_500</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/primary_500</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>