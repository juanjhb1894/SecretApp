<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bg_roudend_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:padding="10dp"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvTitleInfoPosition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textAlignment="center"
            android:textSize="28sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgInfoPosition"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_below="@id/tvTitleInfoPosition"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY" />

        <ScrollView
            android:padding="10dp"
            android:background="@drawable/bg_roudend_layout_transparent_main"
            android:id="@+id/scrollRulesInfoPosition"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/imgInfoPosition"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tvDescInfoPosition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Description"
                android:textSize="22sp" />

        </ScrollView>

        <Button
            android:id="@+id/btnPositionInfoAlright"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_below="@id/scrollRulesInfoPosition"
            android:layout_centerInParent="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_rounded_corner"
            android:text="Alright"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </RelativeLayout>

</RelativeLayout>