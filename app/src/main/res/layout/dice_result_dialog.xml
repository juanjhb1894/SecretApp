<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bg_roudend_layout"
    android:padding="10dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/lydicesImage"
        android:layout_below="@id/btn_dice_result_no"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:scaleType="fitXY"
            android:layout_weight="1"
            android:id="@+id/imgAction_dice_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ImageView
            android:src="@drawable/ic_baseline_add_24"
            android:layout_weight="1.5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ImageView
            android:scaleType="fitXY"
            android:layout_weight="1"
            android:id="@+id/imgPart_dice_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <TextView
        android:textSize="24sp"
        android:layout_margin="10dp"
        android:layout_below="@id/lydicesImage"
        android:id="@+id/tvDiceResult"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>

    <Button
        android:text="Close"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:background="@drawable/button_rounded_corner"
        android:textColor="@color/white"
        android:id="@+id/btn_dice_result_no"
        android:layout_width="200dp"
        android:layout_height="48dp"/>

</LinearLayout>