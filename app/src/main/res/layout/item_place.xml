<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_roudend_layout"
    android:padding="10dp"
    android:weightSum="2"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="0dp"
        android:scaleType="fitXY"
        android:layout_height="120dp"
        android:layout_weight=".8">

        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/imgItemPlacePicture"
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:layout_height="match_parent"/>

        <ImageView
            android:visibility="invisible"
            android:src="@drawable/baseline_verified_24"
            android:layout_margin="5dp"
            android:layout_alignParentEnd="true"
            android:id="@+id/imgVerifiedPlace"
            android:layout_width="24dp"
            android:layout_height="24dp"/>

    </RelativeLayout>


    <LinearLayout
        android:layout_marginStart="7dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.2">

        <TextView
            android:id="@+id/tvItemPlaceDistance"
            android:background="@drawable/bg_distance"
            android:padding="3dp"
            android:text=" 100 km "
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_gravity="end"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

        <TextView
            android:id="@+id/tvItemPlaceName"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_gravity="start"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>

        <TextView
            android:id="@+id/tvItemPlaceCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp" />

        <TextView
            android:id="@+id/tvItemPlaceCategory"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:textStyle="bold"
            android:layout_gravity="start"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>

    </LinearLayout>

</LinearLayout>