<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bg_roudend_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:padding="10dp"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvTitleInfoGame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textAlignment="center"
            android:textSize="28sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgInfoGame"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_below="@id/tvTitleInfoGame"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tvDescInfoGame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgInfoGame"
            android:layout_marginTop="10dp"
            android:text="Description"
            android:textAlignment="center"
            android:textSize="18sp" />

        <ScrollView
            android:layout_height="100dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:id="@+id/scrollRulesInfoGame"
            android:layout_below="@id/tvDescInfoGame">
            <TextView
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:id="@+id/tvRulesInfoGame"
                android:textSize="18sp"
                android:text="Rules"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </ScrollView>

        <Button
            android:id="@+id/btnGameInfoAlright"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_below="@id/scrollRulesInfoGame"
            android:layout_centerInParent="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_rounded_corner"
            android:text="Alright"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </RelativeLayout>

</RelativeLayout>